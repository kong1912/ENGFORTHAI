{% from "form_field.jinja" import render_field %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
          rel="stylesheet" 
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
          crossorigin="anonymous">
    <link rel="stylesheet" href="{{ url_for('auth.static', filename='css/style.css') }}">
</head>
<body>
    <section class="vh-100 bg-image" style="background-image: url({{ url_for('main.static', filename='img/test4.jpg') }}); width : 100%; ">
        <div class="mask d-flex align-items-center h-100 gradient-custom-4">
          <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
              <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                  <div class="card-body p-5">
                    <h2 class="text-uppercase text-center mb-5">Log in</h2>      
                    <form method="POST" novalidate> 
                      {{ form.hidden_tag() }}    
                      <div class="form-outline mb-4">
                        
                        {{ form.username(class="form-control form-control-lg", placeholder="ชื่อผู้ใช้") }}
                        {{ render_field(form.username) }} <br>

                        {{ form.password(class="form-control form-control-lg", placeholder="รหัสผ่าน") }}
                        {{ render_field(form.password) }} <br>

                      </div>
                      <div class="d-flex justify-content-center">
                        {{ form.submit(class="btn btn-success btn-block btn-lg gradient-custom-4 text-body",value="Log in") }}
                      </div>      
                    
                    </form>      
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
   integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" 
   crossorigin="anonymous"></script>
</body>
</html>