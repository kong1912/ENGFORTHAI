<!DOCTYPE html>
<html>
 <head>
  <meta charset="utf-8">
  <title>Register</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
  rel="stylesheet" 
  integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
  crossorigin="anonymous">
  <link rel="stylesheet" href="{{ url_for('auth.static', filename='css/style.css') }}">

 <body>
  
  <div class="container">
    <div class="row main">
       <div class="main-register main-center">
           <h5 class="register-header" align="center">สมัครสมาชิก </h5>
           <form  method="POST", autocomplete="off"> 
               {{ form.hidden_tag() }}
               <div class="form-group">

                    {{ form.email.label() }}
                    {{ form.email(class="form-control", placeholder="E-mail") }}

                    {% for error in form.email.errors %}
                        <div class="invalid-feedback">{{ error }}</div>
                    {% endfor %}


                    {{ form.firstname.label() }}
                    {{ form.firstname(class="form-control", placeholder="ชื่อจริง") }}

                    {% for error in form.firstname.errors %}
                        <div class="invalid-feedback">{{ error }}</div>
                    {% endfor %}

       
                    {{ form.lastname.label() }}
                    {{ form.lastname(class="form-control", placeholder="นามสกุล") }}

                    {% for error in form.lastname.errors %}
                        <div class="invalid-feedback">{{ error }}</div>
                    {% endfor %}
                   

                    {{ form.username.label() }}
                    {{ form.username(class="form-control", placeholder="ชื่อผู้ใช้") }}
                    
                    {% for error in form.username.errors %}
                        <div class="invalid-feedback">{{ error }}</div>
                    {% endfor %}


                    {{ form.password.label() }}
                    {{ form.password(class="form-control", placeholder="รหัสผ่าน") }}

                    {% for error in form.password.errors %}
                        <div class="invalid-feedback">{{ error }}</div>
                    {% endfor %}

                    {{ form.confirm_password.label() }}
                    {{ form.confirm_password(class="form-control", placeholder="ยืนยันรหัสผ่าน") }}       
                    
                    {% for error in form.confirm_password.errors %}
                        <div class="invalid-feedback">{{ error }}</div>
                    {% endfor %}
                    <br>
                    {{ form.submit(class="btn btn-primary btn-lg btn-block login-button", value="สมัครสมาชิก") }}
               
               </div>
           </form>
       </div>
        
       </div>
    </div>
   </div>

   {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}
           {% for category, message in messages %}
              <div class="alert alert-{{ category }}">
                  <button type="button" class="m1-2 mb-1 close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                  </button>
                  {{ message }}
              </div>
           {% endfor %}
        {% endif %}
    {% endwith %}
   

   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
   integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" 
   crossorigin="anonymous"></script>
 </body>
</html>